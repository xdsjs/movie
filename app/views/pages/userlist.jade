extends ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 名字
            th 时间
            th 查看
            th 修改
            th 删除
        tbody
          each item in movies
            tr(class="item-id-#{item._id}")
              td #{item.name}
              td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
              td: a(href="../movie/#{item._id}", target="_blank") 查看
              td: a(href="../admin/update/#{item._id}", target="_blank") 修改
              td
                button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
                
